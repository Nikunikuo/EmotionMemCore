# EmotionMemCore 開発環境設定

# =================================
# 基本設定
# =================================
ENVIRONMENT=development
DEBUG_MODE=true
HOST=0.0.0.0
PORT=8000

# =================================
# LLM設定（モックモード）
# =================================
LLM_MOCK_MODE=true
LLM_PROVIDER=mock
# 開発時に実際のAPIを使用する場合はコメントアウト
# ANTHROPIC_API_KEY=your-development-api-key
# OPENAI_API_KEY=your-development-api-key

# =================================
# データベース設定
# =================================
CHROMA_PERSIST_DIRECTORY=./dev_chroma_db
MEMORY_COLLECTION_NAME=dev_emotion_memories

# =================================
# セキュリティ設定（開発用に緩和）
# =================================
AUTH_ENABLED=false
RATE_LIMIT_ENABLED=false

# =================================
# CORS設定（全許可）
# =================================
# 開発環境では全オリジン許可

# =================================
# ログ設定
# =================================
LOG_LEVEL=DEBUG
LOG_FORMAT=human