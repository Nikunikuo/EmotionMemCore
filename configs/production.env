# EmotionMemCore 本番環境設定

# =================================
# 基本設定
# =================================
ENVIRONMENT=production
DEBUG_MODE=false
HOST=0.0.0.0
PORT=8000

# =================================
# LLM設定
# =================================
LLM_MOCK_MODE=false
LLM_PROVIDER=claude
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# =================================
# Embedding設定
# =================================
# OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =================================
# データベース設定
# =================================
CHROMA_PERSIST_DIRECTORY=./chroma_db
MEMORY_COLLECTION_NAME=emotion_memories

# =================================
# セキュリティ設定
# =================================
AUTH_ENABLED=true
# MASTER_API_KEY=your-secure-master-api-key-here
# API_KEYS=key1,key2,key3

# レート制限
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=60
RATE_LIMIT_RPH=1000
RATE_LIMIT_BURST=10

# 個別エンドポイント制限
SAVE_RATE_LIMIT_RPM=30
SEARCH_RATE_LIMIT_RPM=60
MEMORIES_RATE_LIMIT_RPM=30

# =================================
# CORS設定
# =================================
# CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
# PRODUCTION_DOMAINS=yourdomain.com,app.yourdomain.com

# =================================
# セキュリティヘッダー
# =================================
MAX_REQUEST_SIZE=10485760

# =================================
# ログ設定
# =================================
LOG_LEVEL=INFO
LOG_FORMAT=json