# EmotionMemCore ステージング環境設定

# =================================
# 基本設定
# =================================
ENVIRONMENT=staging
DEBUG_MODE=true
HOST=0.0.0.0
PORT=8000

# =================================
# LLM設定
# =================================
LLM_MOCK_MODE=false
LLM_PROVIDER=claude
# ANTHROPIC_API_KEY=your-staging-api-key-here
ANTHROPIC_MODEL=claude-3-haiku-20240307

# =================================
# Embedding設定
# =================================
# OPENAI_API_KEY=your-staging-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# =================================
# データベース設定
# =================================
CHROMA_PERSIST_DIRECTORY=./staging_chroma_db
MEMORY_COLLECTION_NAME=staging_emotion_memories

# =================================
# セキュリティ設定
# =================================
AUTH_ENABLED=true
# MASTER_API_KEY=your-staging-master-api-key-here

# レート制限（本番より緩め）
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=120
RATE_LIMIT_RPH=2000
RATE_LIMIT_BURST=20

# =================================
# CORS設定
# =================================
# CORS_ALLOWED_ORIGINS=https://staging.yourdomain.com,https://test.yourdomain.com

# =================================
# ログ設定
# =================================
LOG_LEVEL=DEBUG
LOG_FORMAT=json